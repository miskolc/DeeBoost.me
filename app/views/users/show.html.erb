
<% if @current_location %>
<div class="container location-form has-location">
  <p><%= @current_location.longitude %></p>
  <p><%= @current_location.latitude %></p>
  <%= form_for( @location, url: user_locations_post_update_path(current_user), remote: true ) do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :longitude %>
    <%= f.hidden_field :latitude %>
    <%= f.hidden_field :current_location %>
    <%= hidden_field :date_time, :timezone %>
    <%= hidden_field :date_time, :year %>
    <%= hidden_field :date_time, :day %>
    <%= hidden_field :date_time, :month %>
    <%= f.submit "Update Location", class: "btn btn-default btn-sand js-submit" %>
  <% end %>
</div>
<div class="container col-md-12 col-lg-12 col-xs-12" style="height: 240px">
  <div id="chart_div" style="height: 100%">
  </div>
  <div class="ajax-loader"></div>
</div>
<% else %>
<div class="container location-form no-location">
  <%= form_for( @location, url: user_locations_path(current_user) ) do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :longitude %>
    <%= f.hidden_field :latitude %>
    <%= f.hidden_field :current_location, value: true %>
    <%= hidden_field :date_time, :timezone %>
    <%= hidden_field :date_time, :year %>
    <%= hidden_field :date_time, :day %>
    <%= hidden_field :date_time, :month %>
    <%= f.submit class: "js-submit" %>
  <% end %>
</div>
<div class="container col-md-12 col-lg-12 col-xs-12" style="height: 240px">
  <div id="chart_div" style="height: 100%">
  </div>
  <div class="ajax-loader"></div>
</div>
<% end %>
