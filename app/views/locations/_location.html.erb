<tr id="location_<%= location.id %>" class="<%= 'current_location' if location.current_location? %>">
  <td><%= addition_date_for location %></td>
  <td><%= location.latitude %></td>
  <td><%= location.longitude %></td>
  <td class="delete_location"><%= link_to "Delete Location", user_location_path(current_user, location), method: :delete, remote: true %></td>
  <td><%= render partial: "location_form", locals: { location: location } %> </td>
</tr>